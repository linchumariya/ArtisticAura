        .mobile-nav .dropdown-menu {
            position: absolute;
            top: 50px;
            right: 10px;
            display: none;
            width: auto;
            padding: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            background-color: #fff;
            z-index: 1; 

            /* Higher z-index to show above other elements */
        }
        .mobile-nav .dropdown-item {
            color: #333;
            padding: 10px 0;
            text-decoration: none; /* Remove underline */
        }
        .mobile-nav .dropdown-item:hover {
            color: #007bff;
            /* z-index: 1050;  */
            text-decoration: none; /* Ensure underline does not appear on hover */
        }
        .main{
            z-index: -1;
        }

        /* Mobile Styles */
        @media (max-width: 768px) {
         
            .header-nav {
                display: none;
            }
            .mobile-nav .dropdown:hover .dropdown-menu,
            .mobile-nav .dropdown:focus-within .dropdown-menu {
                display: block;
            }
          
        }
        
    </style>
</head>
<body>

<header class="header-area header-style-1 header-height-2">
    <!-- Header for larger screens (desktop) -->
    <div class="header-middle header-middle-ptb-1 d-none d-lg-block">
        <div class="container">
            <div class="header-wrap bg-white">
                <div class="logo logo-width-1">
                    <a href="/">
                        <img src="/assets/imgs/theme/artisticAuraa.ico" class="logo-img" alt="Artistic Aura">
                    </a>
                </div>
                <div class="header-right">
                    <form id="searchForm" class="search-style-2 d-flex align-items-center mb-4 border rounded p-1">
                        <input id="searchInput" class="form-control border-0" type="search" placeholder="Search products" name="search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
                    <div class="header-nav d-none d-lg-flex">
                        <div class="main-menu main-menu-padding-1 main-menu-lh-2">
                            <nav>
                                <ul>
                                    <li><a class="active" href="/">Home</a></li>
                                    <li><a href="/about">About</a></li>
                                    <li><a href="/profile">Profile</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="header-action-right">
                        <div class="header-action-2">
                            <div class="header-action-icon-2">
                                <a href="/wishlist">
                                    <img class="svgInject" alt="Artistic Aura" src="/assets/imgs/theme/icons/icon-heart.svg">
                                </a>
                            </div>
                            <div class="header-action-icon-2">
                                <a class="mini-cart-icon" href="/cart">
                                    <img alt="Artistic Aura" src="/assets/imgs/theme/icons/icon-cart.svg">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4">
                        <div class="header-info header-info-right">
                            <ul>
                                <% if (user) { %>
                                    <li><i class="fi-rs-user"></i><a href="/logout">Log out</a></li>
                                <% } else { %>
                                    <li><i class="fi-rs-user"></i><a href="/login">Log In</a></li>
                                    <li><i class="fi-rs-user"></i><a href="/register">Sign Up</a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Header for smaller screens (mobile) -->
    <div class=" header-bottom-bg-color sticky-bar d-block d-lg-none">
        <div class="container">
            <div class="header-wrap header-space-between position-relative">
                <!-- Logo for mobile -->
                <div class="logo logo-width-1">
                    <a href="/"><img src="/assets/imgs/theme/artisticAuraa.ico" class="logo-img" alt="logo"></a>
                </div>
                <!-- Mobile Menu Icon and Navigation Links -->
                <div class="mobile-nav">
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown"  id="dropdownAccount" aria-expanded="false">
                            <img class="img-xs rounded-circle" src="/assets/imgs/theme/icons/user_15164510.png" alt="User" style="width: 30px; height: 30px;">
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownAccount">
                            <a class="dropdown-item" href="/"></i>Home</a>
                            <a class="dropdown-item" href="/wishlist"></i>Wishlist</a>
                            <a class="dropdown-item" href="/cart"></i>Cart</a>
                            <a class="dropdown-item" href="/wallet"></i>Wallet</a>
                            <a class="dropdown-item" href="/profile"></i>Profile</a>
                            <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/login" class="nav-link">Log In</a>
                                <a class="dropdown-item" href="/register" class="nav-link">Sign Up</a>
                            <a class="dropdown-item text-danger" href="/logout"></i>Logout</a>
                        </div>
                    </li>
                </div>
            </div>
        </div>
    </div>
</header>