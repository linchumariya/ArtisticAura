        }
        .main-menu ul li {
            white-space: nowrap;
        }
        .search-style-2 button.btn-outline-success {
    font-size: 0.8rem !important;
    padding: 3px 6px !important; 
    height: 30px !important; 
    width: auto !important;
    line-height: 1 !important; 
}
.header-right {
    margin-right: 20px; 
}

.header-nav {
    margin-left: 20px;
}
.burger-icon {
            cursor: pointer;
            display: flex;
