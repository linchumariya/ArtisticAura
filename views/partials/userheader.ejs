<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title>Artistic Aura</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/Artisticlogo.ico">
    <!-- Template CSS -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/sass/main.scss">
    <!-- Added for SweetAlert and Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        .logo-img {
            width: 40px;
            height: auto;
        }
        .header-action-right, .header-action-icon-2, .logo {
            display: flex !important;
        }
        .header-nav {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        .main-menu ul {
            display: flex;
            align-items: center;
            list-style: none;
            padding: 0;
            margin: 0;
            gap: 15px;
        }
        .main-menu ul li {
            white-space: nowrap;
        }
        .search-style-2 button.btn-outline-success {
    font-size: 0.8rem !important;
    padding: 3px 6px !important; 
    height: 30px !important; 
    width: auto !important;
    line-height: 1 !important; 
}
.header-right {
    margin-right: 20px; 
}

.header-nav {
    margin-left: 20px;
}
        /* Mobile Styles */
        @media (max-width: 768px) {
            .header-middle { 
                display: none;
            }
            .header-bottom {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 10px 20px;
            }
            .header-nav {
                display: none;
            }
            .mobile-nav {
                display: flex;
                align-items: center;
                gap: 15px;
            }
            .mobile-menu {
                display: flex;
                align-items: center;
                gap: 10px;
                list-style: none;
                margin: 0;
                padding: 0;
            }
            .burger-icon {
                display: inline-block;
                cursor: pointer;
            }
          
        }
    </style>
</head>
<body>

<header class="header-area header-style-1 header-height-2">
    <!-- Header for larger screens (desktop) -->
    <div class="header-middle header-middle-ptb-1 d-none d-lg-block">
        <div class="container">
            <div class="header-wrap bg-white">
                <div class="logo logo-width-1">
                    <a href="/">
                        <img src="/assets/imgs/theme/artisticAuraa.ico" class="logo-img" alt="Artistic Aura">
                    </a>
                </div>
                <div class="header-right">
                    <div class="search-style-2">
                        <form id="searchForm" class="d-flex mb-4">
                            <input id="searchInput" class="form-control me-2" type="search" placeholder="Search for products" aria-label="Search" name="search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
                    <div class="header-nav d-none d-lg-flex">
                        <div class="main-menu main-menu-padding-1 main-menu-lh-2">
                            <nav>
                                <ul>
                                    <li><a class="active" href="/">Home</a></li>
                                    <li><a href="/about">About</a></li>
                                    <li><a href="/profile">Profile</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="header-action-right">
                        <div class="header-action-2">
                            <div class="header-action-icon-2">
                                <a href="/wishlist">
                                    <img class="svgInject" alt="Artistic Aura" src="/assets/imgs/theme/icons/icon-heart.svg">
                                </a>
                            </div>
                            <div class="header-action-icon-2">
                                <a class="mini-cart-icon" href="/cart">
                                    <img alt="Artistic Aura" src="/assets/imgs/theme/icons/icon-cart.svg">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4">
                        <div class="header-info header-info-right">
                            <ul>
                                <% if (user) { %>
                                    <li><i class="fi-rs-user"></i><a href="/logout">Log out</a></li>
                                <% } else { %>
                                    <li><i class="fi-rs-user"></i><a href="/login">Log In</a></li>
                                    <li><i class="fi-rs-user"></i><a href="/register">Sign Up</a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Header for smaller screens (mobile) -->
    <div class="header-bottom header-bottom-bg-color sticky-bar d-block d-lg-none">
        <div class="container">
            <div class="header-wrap header-space-between position-relative">
                <!-- Logo for mobile -->
                <div class="logo logo-width-1">
                    <a href="/"><img src="/assets/imgs/theme/artisticAuraa.ico" class="logo-img" alt="logo"></a>
                </div>
                <!-- Mobile Menu Icon and Navigation Links -->
                <div class="mobile-nav">
                    <div class="mobile-menu">
                        <a href="/" class="nav-link">Home</a>
                        <a href="/about" class="nav-link">About</a>
                        <a href="/profile" class="nav-link">Profile</a>
                    </div>
                    <div class="header-action-right">
                        <% if (user) { %>
                            <a href="/logout" class="nav-link">Log out</a>
                        <% } else { %>
                            <a href="/login" class="nav-link">Log In</a>
                            <a href="/register" class="nav-link">Sign Up</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

</body>

