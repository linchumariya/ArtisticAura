    <script>


document.querySelectorAll('.quantity-select').forEach(select => {
        select.addEventListener('change', function() {
            const productId = this.getAttribute('data-id');
            const selectedQuantity = parseInt(this.value, 10);
                console.log(selectedQuantity)

            fetch(`/updatecart/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ change: selectedQuantity })

            }).then(response => {
                console.log(response);
                if (response.ok) {
                
            return response.json();
                    
                } else {
                    console.error('Failed to update quantity');
                }
            }).then((data)=>{
                console.log(data);
                
                const pricePerUnit =data.item.price
            const subtotalElement = this.closest('tr').querySelector('.subtotal-value');

         
            const newSubtotal = pricePerUnit * selectedQuantity;
     
            subtotalElement.innerText =  `₹ ${newSubtotal.toFixed(2)}`;
            let newTotalPrice = 0;
                document.querySelectorAll('.subtotal-value').forEach(subtotalEl => {

                   const value = parseFloat(subtotalEl.innerText.replace('₹ ', ''));
                    if (!isNaN(parseFloat(value))) {
                        newTotalPrice += parseFloat(value);}
                });
                document.getElementById('totalPrice').innerText = `₹ ${newTotalPrice.toFixed(2)}`;
                console.log('Quantity updated successfully');
            }).catch(error => console.error('Error:', error));
        });
    });
            document.querySelectorAll('.action a').forEach(link => {
                link.addEventListener('click', async function (event) {
                    event.preventDefault();
                    const productId = this.getAttribute('href').split('/').pop();
                    await removeFromCart(productId);
                });
            });
    
        async function removeFromCart(productId) {
            try {
                const response = await fetch(`/removecart/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const data = await response.json();
                if (data.success) {
                    window.location.reload(); // Reload the page to update the cart view
                } else {
                    alert('Error removing item from cart');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
    </script>
        
    
