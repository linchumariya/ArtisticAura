    <section class="mt-50 mb-50">
               
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <% if (userCart && userCart.items.length > 0) { %>
                    <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% userCart.items.forEach(item => { %>
                                        <tr>
                                            <td class="align-middle">
                                                <img src="/product_images/<%= item.product.image[0] %>" alt="Product Image" class="img-thumbnail" style="width: 70px; height: 70px"/>
                                            </td>
                                            <td class="product-des">
                                                <h5 class="product-name"><a href="/productdetails/<%= item.product._id %>"><%= item.product.productName %></a></h5>
                                            </td>
                                            <td class="price" data-title="Price"><span>Rs. <%= item.price %></span></td>

                                            <td class="text-center" data-title="Quantity">



                                                <select class="form-select quantity-select" data-id="<%= item.product._id %>">



                                                    <% const maxQuantity = item.product.stock >= 5 ? 5 : item.product.stock %>

                                                    <% for(let i = 1; i <= maxQuantity; i++) { %>

                                                        <option value="<%= i %>" <% if(item.quantity === i) { %>selected<% } %>><%= i %></option>

                                                    <% } %>
                                                </select>

                                            </td>
                                            <td class="text-right subtotal" data-id="<%= item.product._id %>">

                                                <span class="subtotal-value"><%= (item.price * item.quantity).toFixed(2)  %></span>
                                            </td>
                                            <td class="action">
                                                <a href="/cart/remove/<%= item.product._id %>" class="text-muted"><i class="fi-rs-trash"></i></a>
                                            </td>

                                                
                                        </tr>
                                    <% }) %>
                                </tbody>
                                            <tr>
                                                <td class="cart_total_label">Shipping</td>
                                                <td class="cart_total_amount"> <i class="ti-gift mr-5"></i> Free shipping </td>
                                            </tr>
                                            <tr>
                                                <td class="cart_total_label">Total</td>

                                                <td class="cart_total"><strong><span class="font-xl fw-900 text-brand " id="totalPrice" >₹ <%= userCart.totalPrice %> </span></strong></td>
                                            </tr>
                                        </tbody>
                                    </table>
                              
                                </div>
                                <div>
                                    <a href="/checkout" class="btn" >
                                        <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut
                                    </a>
                                </div>
                                <% } else { %>
                                    <p>No items found in your cart.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
