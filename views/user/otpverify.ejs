<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTP Verification</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
      /* Your custom styles here */
      .container {
        height: 100vh;
      }
    </style>
  </head>

  <body>
    <div
      class="container d-flex justify-content-center align-items-center"
    >
      <div class="position-relative">
        <div class="card p-4 text-center">
          <h6>
            Please enter the one-time password <br />
            to verify your account
          </h6>
          <div>
            <span>OTP code has been sent to your email</span>
          </div>

          <form action="/otpverify" method="POST" id="otpForm">
            <div
              id="otp"
              class="inputs d-flex flex-row justify-content-center mt-3"
            >
              <input
                class="m-2 text-center form-control rounded"
                type="text"
                name="otp"
                id="otpInput"
                maxlength="6"
                placeholder="Enter OTP"
                required
              />
            </div>
            <input type="hidden" name="email" value="<%= email %>" />
            <div class="mt-4">
              <input
                type="submit"
                value="Submit"
                class="btn btn-danger px-4 verify"
              />
            </div>

            <!-- Resend button, initially hidden -->
            <div class="mt-4" id="resend-container" style="display: none">
              <a href="/resendOtp?email=<%= email %>">
                <input
                  type="button"
                  value="Resend OTP"
                  class="btn btn-primary px-4 verify"
                />
              </a>
            </div>

            <!-- Countdown Timer -->
            <div id="countdown" class="mt-3">5:00</div>
          </form>
        </div>
      </div>
    </div>

    
    <script>
      var message = "<%= message %>" || null;
      var alertType = "<%= alertType %>" || null;
      let seconds = 300; // 5 minutes

      // Update the countdown timer
      function updateTimer() {
        const timerElement = document.getElementById("countdown");
        const minutes = Math.floor(seconds / 60);
        const remainingSeconds = seconds % 60;
        timerElement.textContent = `${minutes}:${remainingSeconds < 10 ? "0" : ""}${remainingSeconds}`;
      }

      // Start the countdown timer
      function startTimer() {
        console.log("iam counter")
        updateTimer();
        const timerInterval = setInterval(() => {
          seconds--;
          if (seconds >= 0) {
            updateTimer(); // Update the timer every second
          } else {
            clearInterval(timerInterval);
            Swal.fire({
              icon: "error",
              title: "Time is up!",
              text: "Please request a new OTP code.",
              confirmButtonColor: "#dc3545",
            });
            document.getElementById("resend-container").style.display = "block"; // Show resend button
            sessionStorage.setItem("otpResendVisible", "true"); // Store resend visibility
          } 
        }, 1000);
      }

      window.onload = () => {
        // Start the countdown on page load
        
        startTimer();

        // Show alert if message exists
        if (message && alertType) {
          Swal.fire({
            icon: alertType,
            title: message,
            confirmButtonColor: "#28a745",
          }).then((result) => {
            if (result.isConfirmed && alertType === "success") {
              window.location.href = "/login";
            }
          });
        }

        // Check if resend button should be visible based on session storage
        const resendVisible = sessionStorage.getItem("otpResendVisible");
        if (resendVisible === "true") {
          document.getElementById("resend-container").style.display = "block";
        }
      };
    </script>
    
  </body>
</html>
